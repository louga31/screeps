{
  "name": "screeps",
  "version": "1.0.0",
  "description": "Screeps AI",
  "scripts": {
    "lint": "deno lint src",
    "build": "rollup -c",
    "push-main": "rollup -c --environment DEST:main",
    "push-exoblue": "rollup -c --environment DEST:exoblue",
    "push-season": "rollup -c --environment DEST:season",
    "push-sim": "rollup -c --environment DEST:sim",
    "test": "deno run test-unit",
    "test-unit": "mocha test/unit/**/*.ts",
    "test-integration": "echo 'See docs/in-depth/testing.md for instructions on enabling integration tests'",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-exoblue": "rollup -cw --environment DEST:exoblue",
    "watch-season": "rollup -cw --environment DEST:season",
    "watch-sim": "rollup -cw --environment DEST:sim"
  },
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-commonjs": "28.0.1",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@types/chai": "5.0.1",
    "@types/lodash": "4.17.13",
    "@types/mocha": "10.0.9",
    "@types/node": "22.9.0",
    "@types/screeps": "3.3.8",
    "@types/sinon": "17.0.3",
    "@types/sinon-chai": "4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@typescript-eslint/typescript-estree": "^8.14.0",
    "chai": "5.1.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lodash": "4.17.21",
    "mocha": "10.8.2",
    "rollup": "4.27.2",
    "rollup-plugin-clear": "2.0.7",
    "rollup-plugin-screeps": "1.0.1",
    "rollup-plugin-typescript2": "0.36.0",
    "sinon": "19.0.2",
    "sinon-chai": "4.0.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "source-map": "~0.6.1"
  }
}

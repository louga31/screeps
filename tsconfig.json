{
	"compilerOptions": {
		"module": "esnext",
		"lib": [
			"esnext",
			"dom"
		],
		"target": "es2018",
		"moduleResolution": "Node",
		"outDir": "dist",
		"baseUrl": "./src",
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/typed-screeps"
		]
	},
	"exclude": [
		"node_modules",
		"test",
		"mock",
		"*.example.ts"
	]
}
